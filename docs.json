          },
          {
            "label": "Documentation",
            "href": "https://docs.acebot.app"
          }
        ]
      },
      {
        "header": "Community",
        "items": [
          {
            "label": "Twitter",
            "href": "https://x.com/AceBotApp"
          },
          {
            "label": "Telegram",
            "href": "https://t.me/AceBotCommunity"
          }
        ]
      }
    ]
  },
